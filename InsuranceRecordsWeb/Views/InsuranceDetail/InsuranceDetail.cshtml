@model Insurance
@{
    ViewData["Title"] = "Detail";
}

<div class="container-fluid p3-">
    @*<partial name="_DetailPolicyHolder" />*@
    <div class="row pt-4 align-items-center">
        <div class="text-center text-sm-start">
            <h2 class="text-primary">Detail pojištění</h2>
        </div>
    </div>
    <hr class="border-2 border-top border-primary">

    <div class="container">            
        @*<div class="row pt-4 pb-4 align-items-center">
            <div class="text-center text-sm-start">
                <h2 class="text-primary">@Model.Name @Model.LastName</h2>
            </div>    
        </div>*@
        <div class="row">                    
            <div class="col-12 col-sm-6 col-lg-4 px-5">                    
                <div>@Model.InsuranceHolderId</div>
                <div>@Model.InsuranceType</div>
                <idiv>@Model.InsuranceSubject<div>                       
            </div>                                        
            <div class="col-12 col-sm-6 px-5 px-sm-0 pt-4 pt-sm-0">                       
                <div>@Model.InsuranceValidFrom</div>
                <div>@Model.InsuranceValidUntil</div>                     
            </div>                   
        </div>
    </div>   
    
    <hr class="border-2 border-top border-primary">
    <div class="container text-center">
        <div class="d-flex flex-column flex-lg-row justify-content-center">
            <div class="p-1"> <a asp-controller="Insurance" asp-action="Edit" asp-route-id="@Model.Id" 
                class="btn btn-primary" style="width:300px"><i class="bi bi-pencil-square"></i>&nbsp;Editovat pojištění</a>
            </div>
             <div class="p-1"> <a asp-controller="Insurance" asp-action="Delete" asp-route-id="@Model.Id" 
                class="btn btn-danger" style="width:300px"><i class="bi bi-trash"></i>&nbsp;Odstranit pojištění</a>
            </div>                            
        </div>
    </div>
    <div class="text-center pt-4">
		<a asp-controller="PolicyHolderDetail" asp-action="PolicyHolderDetail" asp-route-id="@Model.InsuranceHolderId" class="btn btn-secondary btn-outline-primary" style="width:300px">
			Zpět
		</a>
	</div>
</div>