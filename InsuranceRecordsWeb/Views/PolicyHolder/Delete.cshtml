@model PolicyHolder

<form method="post" asp-action="Delete">
	<input asp-for="Id" hidden />
	<div class="p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Odstranit pojištěnce</h2>
		</div>
		<hr class="border-2 border-top border-primary">
		@*<div asp-validation-summary="All"></div>*@
		<div class="row pt-4">
			<div class="col-md-6 mb-3">
				<label asp-for="Name"></label>
				<input asp-for="Name" disabled class="form-control" />			
			</div>
			<div class="col-md-6 mb-3">
				<label asp-for="LastName"></label>
				<input asp-for="LastName" disabled class="form-control" />				
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 mb-3">
				<label asp-for="EMail"></label>
				<input asp-for="EMail" disabled class="form-control" />
				
			</div>
			<div class="col-md-6 mb-3">
				<label asp-for="TelephoneNumber"></label>
				<input asp-for="TelephoneNumber" disabled class="form-control" />			
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 mb-3">
				<label asp-for="StreetName"></label>
				<input asp-for="StreetName" disabled class="form-control" />				
			</div>
			<div class="col-md-6 mb-3">
				<label asp-for="BuildingNumber"></label>
				<input asp-for="BuildingNumber" disabled class="form-control" />			
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 mb-3">
				<label asp-for="CityName"></label>
				<input asp-for="CityName" disabled class="form-control" />				
			</div>
			<div class="col-md-6 mb-3">
				<label asp-for="ZIPCode"></label>
				<input asp-for="ZIPCode" disabled class="form-control" />			
			</div>
		</div>
	</div>
	<div class="text-center">
		<button type="submit" class="btn btn-danger" style="width:200px"><i class="bi bi-trash"></i>&nbsp;Odstranit</button>
		<a asp-controller="PolicyHolder" asp-action="Index" class="btn btn-secondary btn-outline-primary" style="width:200px">
			Zpět na seznam
		</a>
	</div>
</form>
@section Scripts
{
	<!--Client side validation-->
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

