@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Role - smazat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    
<form asp-action="DeleteRole">
	<div class="p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Odstranit roli</h2>
		</div>
		<hr class="border-2 border-top border-primary">
		@*<div asp-validation-summary="All"></div>*@
		<div class="row pt-4">
			<div class="col-md-8 col-lg-6 mb-3">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>           
                @*<label asp-for="Name" class="control-label"></label>*@
                <input asp-for="Name" class="form-control" readonly/>   		
			</div>
		</div>
	</div>
	<div class="text-center text-sm-start px-3">
		<button type="submit" class="btn btn-danger" style="width:200px"><i class="bi bi-trash"></i>&nbsp;Odstranit</button>
		<a asp-action="IndexRole" asp-controller="Admin" class="btn btn-secondary btn-outline-primary" style="width:200px">
			Zpět na seznam
		</a>
	</div>
</form>

