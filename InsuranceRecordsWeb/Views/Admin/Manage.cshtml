@model List<ManageUserRolesViewModel>

@{
    ViewData["Title"] = "Upravit role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <form method="post">
        <div class="card">
            <div class="card-header">               
                Přidejte/odeberte roli uživatele / @ViewBag.UserName.
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input asp-for="@Model[i].Selected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model[i].Selected">
                            @Model[i].RoleName
                        </label>
                    </div>
                }
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <input type="submit" value="Upravit" class="btn btn-primary" style="width:auto" />
                <a asp-controller="Admin" asp-action="IndexUserRole" class="btn btn-secondary" style="width:auto">Zpět</a>
            </div>
        </div>
    </form>
</div>