@using Microsoft.AspNetCore.Identity
@using InsuranceRecordsWeb.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        
            @if (User.IsInRole("Administrator"))
                {
                     <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" 
                    title="Manage">Admin</a>
                }
                else
                {
                    <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" 
                    title="Manage">Profil</a>@*Hello @UserManager.GetUserName(User)!*@
                }
        
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link">Odhlásit se</button>
        </form>
    </li>
}
else
{
     <li class="nav-item">
        <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Přihlásit se</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Registrace</a>
    </li>
   
}
</ul>
